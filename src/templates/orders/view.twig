{% requirePermission 'translated:orders' %}

{% extends '_layouts/cp' %}
{% set title = order.title %}
{% set selectedSubnavItem = 'orders' %}
{% do view.registerAssetBundle('scaramangagency\\translated\\web\\TranslatedAsset') %}
{% block actionButton %}
    <div class="buttons">
        <a href="{{ cpUrl('translated/orders/duplicate/' ~ order.id) }}" class="btn tertiary">Duplicate Quote</a>

        {% if
            orderPermissions
                and order.orderStatus == 1
                and (order.dateCreated|date('c')) > (date('-1 day')|date('c')) %}
            <a href="{{ cpUrl('translated/orders/reject/' ~ order.id) }}" class="btn submit secondary">Reject Quote</a>
            <a href="{{ cpUrl('translated/orders/approve/' ~ order.id) }}" class="btn submit">Approve Quote</a>
        {% endif %}

        {% if requestQuote and order.orderStatus == 1 and (order.dateCreated|date('c')) < (date('-1 day')|date('c')) %}
            <a href="{{ cpUrl('translated/orders/refresh/' ~ order.id) }}" class="btn submit">Refresh Quote</a>
        {% endif %}
    </div>
{% endblock %}

{% block tabs %}
    <header id="content-header" class="pane-header">
        <nav id="tabs" class="pane-tabs">
            <ul>
                {% if order.orderStatus == 2 or order.orderStatus == 3 %}
                    <li data-id="0">
                        <a id="tab-0" class="tab sel" href="#tab-fulfilled" title="Fulfilled" aria-label="Fulfilled">
                            Delivery
                        </a>
                    </li>
                {% endif %}
                <li data-id="1">
                    <a id="tab-1"
                        class="tab {{ order.orderStatus != 2 and order.orderStatus != 3 ? 'sel' : '' }}"
                        href="#tab-information"
                        title="Information"
                        aria-label="Information">
                        Order Information
                    </a>
                </li>
            </ul>
            <button type="button" id="overflow-tab-btn" data-icon="ellipsis" class="btn menubtn hidden"></button>
            <div id="overflow-tab-menu" class="menu">
                <ul role="listbox"></ul>
            </div>
        </nav>
    </header>
{% endblock %}

{% set content %}
    {% if order.orderStatus == 2 or order.orderStatus == 3 %}
        <div id="tab-fulfilled">
            {% if order.orderStatus == 2 %}
                {% if not orderStatusFromHTS %}
                    <p class="error">
                        <span data-icon="info"></span> Failed to get the status of this order. Please try again later.
                    </p>
                {% else %}
                    <p class="processing">
                        <span data-icon="info"></span> Your order is still being processed. Please check back again after
                        the delivery date has passed.
                    </p>
                {% endif %}
            {% endif %}

            {% if order.orderStatus == 3 %}
                <p>
                    <span data-icon="info"></span> Your order has been completed.
                </p>
                <hr />
                <p>
                    <strong class="knock">Translated Content</strong>
                </p>
                {% if order.translationAsset %}
                    <a href="{{ cpUrl('translated/orders/delivery/' ~ order.id) }}" class="btn">Download Content</a>
                {% endif %}
                {% if order.auto == 1 and syncOrder %}
                    <a href="{{ cpUrl('translated/orders/sync/' ~ order.id) }}" class="btn submit">Sync to Entry</a>
                {% else %}
                    {{ order.translatedContent|nl2br }}
                {% endif %}
            {% endif %}

            {% if orderStatusFromHTS %}
                <hr />
                <p>
                    <strong class="knock">Project Manager</strong>
                </p>
                <p>
                    {{ orderStatusFromHTS.pm_name }}<br />
                    <a href="mailto:{{ orderStatusFromHTS.pm_email }}">{{ orderStatusFromHTS.pm_email }}</a>
                </p>
            {% endif %}
        </div>
    {% endif %}
    <div id="tab-information" class="{{ order.orderStatus == 2 or order.orderStatus == 3 ? 'hidden' : '' }}">
        <div class="full">
            <strong class="knock">Level</strong>
            <div class="info">
                [£] Economy – Machine Translation with light human review.<br />
                [££] Premium – Human Translation with quality control.<br />
                [£££] Professional – Human Translation with specialist review and quality control.
            </div>
            <br />
            {{ serviceLevel }}
        </div>

        <div class="row">
            <div class="half">
                <strong class="knock">Source Language</strong><br />
                {{ order.sourceLanguage }}
            </div>
            <div class="half">
                <strong class="knock">Target Language</strong><br />
                {{ order.targetLanguage }}
            </div>
        </div>

        <div class="row">
            <div class="half">
                <strong class="knock">Genre</strong><br />
                <span class="capitalise">{{ order.translationSubject }}</span>
            </div>
            <div class="half">
                <strong class="knock">Word Count</strong><br />
                {{ order.wordCount }}
            </div>
        </div>

        {% if order.translationNotes != '' %}
            <div class="full">
                <strong class="knock">Notes</strong><br />
                {{ order.translationNotes }}
            </div>
        {% endif %}

        {% if order.translationAsset != '' %}
            {% set uploadedAsset = craft.assets.id(order.translationAsset).one() %}
            <div class="full">
                <strong class="knock">File</strong><br />
                <a href="{{ uploadedAsset.cpEditUrl }}">{{ uploadedAsset.title }}</a>
            </div>
        {% else %}
            <div class="full">
                <strong class="knock">Content</strong><br />
                {{ order.translationContent|nl2br }}
            </div>
        {% endif %}
    </div>
{% endset %}

{% set details %}
    {% if inSandbox %}
        <div id="alerts" class="mb-8">
            <p>
                Sandbox mode is enabled
            </p>
        </div>
    {% endif %}

    <div class="translated meta information">
        <div class="data primary">
            <h3 class="heading">
                Total
            </h3>
            <div class="value">
                {{ order.quoteTotal|currency('EUR') }}
            </div>
        </div>
        <hr />
        <div class="data">
            <h4 class="heading">
                Status
            </h4>

            <div class="value">
                {{ statusFlag|raw }}
            </div>
        </div>

        {% if order.orderStatus != 3 %}
            <div class="data">
                {% if order.orderStatus == 2 and orderStatusFromHTS %}
                    <h4 class="heading">
                        Delivery Date
                    </h4>
                    <div class="value">
                        {{ orderStatusFromHTS.delivery_date|date('short') }}
                        {{ orderStatusFromHTS.delivery_date|time('short') }}
                    </div>
                {% else %}
                    <h4 class="heading">
                        Delivery Date
                    </h4>
                    <div class="value">
                        {{ order.quoteDeliveryDate|date('short') }} {{ order.quoteDeliveryDate|time('short') }}
                    </div>
                {% endif %}
            </div>
        {% else %}
            <div class="data">
                <h4 class="heading">
                    Delivered on
                </h4>
                <div class="value">
                    {{ order.dateFulfilled|date('short') }} {{ order.dateFulfilled|time('short') }}
                </div>
            </div>
        {% endif %}

        {% if order.orderStatus == 2 %}
            <hr />
            <div class="data">
                <h4 class="heading">
                    Date Authorised
                </h4>
                <div class="value">
                    {{ order.dateApproved|date('short') }} {{ order.dateApproved|time('short') }}
                </div>
            </div>
            <div class="data">
                <h4 class="heading">
                    Reviewed By
                </h4>
                {% set reviewedBy = craft.users.id(order.reviewedBy).one() %}
                <div class="value">
                    <a href="{{ cpUrl('users/' ~ reviewedBy.id) }}">{{ reviewedBy.fullName }}</a>
                </div>
            </div>

            {% if order.orderStatus == 3 %}
                <hr />
                <div class="data">
                    <h4 class="heading">
                        Date Fulfilled
                    </h4>
                    <div class="value">
                        {{ order.dateFulfilled|date('short') }} {{ order.dateFulfilled|time('short') }}
                    </div>
                </div>
            {% endif %}
        {% endif %}

        {% if order.orderStatus == 4 %}
            <hr />
            <div class="data">
                <h4 class="heading">
                    Date Rejected
                </h4>
                <div class="value">
                    {{ order.dateRejected|date('short') }} {{ order.dateRejected|time('short') }}
                </div>
            </div>
            <div class="data">
                <h4 class="heading">
                    Rejected By
                </h4>
                {% set reviewedBy = craft.users.id(order.reviewedBy).one() %}
                <div class="value">
                    <a href="{{ cpUrl('users/' ~ reviewedBy.id) }}">{{ reviewedBy.fullName }}</a>
                </div>
            </div>
        {% endif %}
    </div>

    <div class="translated meta read-only">
        <div class="data">
            <h5 class="heading">
                Quote Date
            </h5>
            <div class="value">
                {{ order.dateCreated|date('short') }} {{ order.dateCreated|time('short') }}
            </div>
        </div>
        <div class="data">
            <h5 class="heading">
                Requested By
            </h5>
            {% set orderedBy = craft.users.id(order.userId).one() %}
            <div class="value">
                <a href="{{ cpUrl('users/' ~ orderedBy.id) }}">{{ orderedBy.fullName }}</a>
            </div>
        </div>
    </div>
{% endset %}
